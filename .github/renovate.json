{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:all",
    "workarounds:all"
  ],
  "branchConcurrentLimit": 0,
  "ignorePaths": [
    "hack"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "replace"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "@chainsafe/libp2p",
        "@libp2p/interface-connection",
        "@libp2p/interface-stream-muxer",
        "it-first",
        "it-length-prefixed",
        "it-pipe",
        "it-pushable",
        "it-stream-types"
      ],
      "enabled": false
    }
  ]
}
